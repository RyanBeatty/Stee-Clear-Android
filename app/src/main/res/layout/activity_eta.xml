<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <steer.clear.view.ViewHeader
        android:id="@+id/activity_eta_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:text="@string/header_text"
        android:layout_marginBottom="60dp" />

    <steer.clear.view.ViewTypefaceTextView
        android:id="@+id/activity_eta_time_prefix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/spirit_gold"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Your ride will '\n' arrive at:"
        android:textSize="30sp"
        android:layout_below="@id/activity_eta_header"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_centerHorizontal="true" />

    <steer.clear.view.ViewTypefaceTextView
        android:id="@+id/activity_eta_time"
        android:layout_below="@id/activity_eta_time_prefix"
        android:layout_width="@dimen/view_eta_dimens"
        android:layout_height="@dimen/view_eta_dimens"
        android:textColor="@color/wm_green"
        android:gravity="center"
        android:textSize="50sp"
        android:text="11:49"
        android:layout_centerHorizontal="true"
        tools:text="11:49" />

    <steer.clear.view.ViewFooter
        android:id="@+id/activity_eta_cancel_ride"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="CANCEL RIDE"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
