<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_hail_ride_background">

    <ImageButton
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/fragment_hail_ride_change_pickup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search_black_24dp"
        android:scaleType="fitXY"
        android:layout_marginTop="125dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <steer.clear.view.ViewChangeLocation
        android:id="@+id/fragment_hail_ride_pickup_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:lines="2"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignBottom="@+id/fragment_hail_ride_change_pickup"
        android:layout_toLeftOf="@+id/fragment_hail_ride_change_pickup"
        android:layout_toStartOf="@+id/fragment_hail_ride_change_pickup" />

    <ImageButton
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/fragment_hail_ride_change_dropoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search_black_24dp"
        android:scaleType="fitXY"
        android:layout_below="@id/fragment_hail_ride_pickup_location"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <steer.clear.view.ViewChangeLocation
        android:id="@+id/fragment_hail_ride_dropoff_location"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:lines="2"
        android:layout_toLeftOf="@id/fragment_hail_ride_change_dropoff"
        android:layout_toStartOf="@id/fragment_hail_ride_change_dropoff"
        android:layout_alignBottom="@id/fragment_hail_ride_change_dropoff"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp" />
    
    <TextView
        android:id="@+id/fragment_hail_ride_passengers"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="@string/fragment_hail_ride_passenger_select_prompt"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fragment_hail_ride_dropoff_location" />
    
    <TextView
        android:id="@+id/view_passenger_switcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_hail_ride_passengers"
        android:drawableStart="@drawable/ic_find_next_holo_light"
        android:drawableLeft="@drawable/ic_find_next_holo_light"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:drawableEnd="@drawable/ic_find_previous_holo_light"
        android:drawableRight="@drawable/ic_find_previous_holo_light" />
    
    <ImageButton
        android:id="@+id/fragment_hail_ride_post"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="58dp"
        android:src="@drawable/hail_button"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
